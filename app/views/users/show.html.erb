<section class="section">
    <div class="container">
        <div class="columns">
            
            
            <div class="column is-one-third">
                <div class="columns is-multiline">
                    
                    <div class="column is-full">
                        <div class="card">

                            <div class="card-content is-horizontal-center is-flex">
                                <figure class="image is-128x128">
                                    <%= image_tag avatar_url(@user), class: "is-rounded" %>
                                </figure>
                            </div>
                        
                            <div class="card-content">

                                <div class="content has-text-centered">
                                    <p class="title is-5"><%= @user.full_name %></p>
                                </div>

                                <hr class="h-10">
                                <article class="media">
                                    <div class="media-content">Member since</div>
                                    <div class="media-right">
                                        <strong><%= @user.created_at.strftime('%b %Y') %></strong>
                                    </div>
                                </article>

                                <hr class="h-10">
                                <article class="media">
                                        <div class="media-content">From</div>
                                        <div class="media-right">
                                            <strong><%= @user.from %></strong>
                                        </div>
                                </article>

                                <hr class="h-10">
                                <article class="media">
                                        <div class="media-content">Online Status</div>
                                        <div class="media-right">
                                            <strong><% if @user.status %> Online <% else %> Offline <% end %></strong>
                                        </div>
                                </article>
                            </div>
                        </div>
                    </div>
                    
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">
                                <article class="media">
                                        <div class="media-content">
                                            <p>
                                                <strong>About Yourself</strong>
                                                <br>
                                                <%= @user.about %>
                                            </p>
                                        </div>
                                        <div class="media-right">
                                            <i class="toggle far fa-edit" aria-controls="user-about"></i>
                                        </div>
                                </article>
                                <hr class="h-10">

                                <article class="media">
                                        <div class="media-content">
                                            <p>
                                                <strong>Language</strong>
                                                <br>
                                                <%= @user.language %>
                                            </p>
                                        </div>
                                </article>
                                <hr class="h-10">

                                <article class="media">
                                    <div class="content">
                                        <p>
                                            <strong>Linked Account</strong><br/>
                                            <% if @user.uid %>
                                                <span class="has-text-success">Facebook verified</span>
                                            <% else %>
                                                <span class="has-text-danger">Facebook unverified</span>
                                            <% end %>
                                        </p>
                                    </div>
                                </article>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="card">
                    <div class="card-header">
                        <div class="card-header-title">Latest Reviews</div>
                    </div>
                    <div class="card-content">
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <%= image_tag avatar_url(@user), class: "is-rounded" %>
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>John</strong><br/>
                                        Lorem ipsum
                                    </p>
                                    <small>31m</small>
                                </div>
                            </div>
                            <div class="media-right">
                                <span class="star-review"><i class="fa fa-star"></i> 5.0</span>
                            </div>
                        </article>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</section>